doctype html
html
    include head.pug
        
    body.home(class=user ? 'authed' : 'anon')
        include navbar.pug

        .container
            h1.col-md-6.col-md-offset-3 Find a bar
            .yelp.col-md-6.col-md-offset-3
                | Powered by
                a(href="https://www.yelp.com/developers/documentation/v2/overview")
                    img(src="/public/img/yelp-logo.png" alt="Yelp")
            form.search.col-md-6.col-md-offset-3
                .input-group.add-on
                    input#search.form-control(type="text" placeholder="Search...")
                    .input-group-btn
                        button.btn.btn-default(type="submit")
                            i.glyphicon.glyphicon-search
            
        .bars.container
            .bar.row.placeholder
                .bar-thumbnail
                    img
                .bar-info
                    h2.bar-title
                        a
                    span.bar-intents
                        span.bar-intents-count 0
                        |
                        | going
                    p.bar-text

        script(src="common/script.js")
        script(src="controllers/intentController.client.js")
